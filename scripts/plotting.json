{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 980,
    "height": 250,
    "padding": 5,
    "description": "A simple bar chart with embedded data.",
    "title": "Plotting price / performance of Nvidia GPU for Nanopore basecalling",
    "data": {
        "url": "price_perf_stats.json"
    },
    "width": {"step": 55},
    "mark": "bar",
    "encoding": {
        "column": {
            "field": "basecalling_model", "type": "ordinal", "spacing": 10
          },
        "x": {
            "field": "GPU",
            "type": "ordinal",
            "axis": {"title": ""}
        },
        "y": {
            "field": "samples/second/$",
            "type": "quantitative"
        },
        "color": {
          "field": "GPU",
          "scale": {"range": ["#675193", "#ca8861", "#c7c7c7"]}
        }
    }
}